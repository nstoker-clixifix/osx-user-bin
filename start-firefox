#/bin/bash

platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
   CMD=xterm -bg=white -fg=black
elif [[ "$unamestr" == 'FreeBSD' ]]; then
   platform='freebsd'
   CMD=xterm -bg=white -fg=black
elif [[ "$unamestr" == 'Darwin' ]]; then
   # Probably OSX
   platform='OSX'
   CMD=term.sh
fi

TABS="http://localhost:3000"

COVERAGE=./coverage/index.html

if [ -f $COVERAGE ]; then
  TABS="$TABS $COVERAGE"
fi

ERD=doc/erd.png
if [ -f $ERD ]; then
 TABS="$TABS $ERD"
fi

if [[ $platform == 'OSX' ]]; then
  open -a firefox $TABS
else
  firefox $TABS
fi

