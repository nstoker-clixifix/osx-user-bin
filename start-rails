#/bin/sh

if [ ! -f Gemfile ]; then
    echo "No Gemfile, aborting."
    exit 0
fi

platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
   CMD=xterm -bg=white -fg=black
elif [[ "$unamestr" == 'FreeBSD' ]]; then
   platform='freebsd'
   CMD=xterm -bg=white -fg=black
elif [[ "$unamestr" == 'Darwin' ]]; then
   # Probably OSX
   platform='OSX'
   CMD=term.sh
fi

start-guard

if [ -f bin/extras ]; then
  bin/extras
fi

code .

open -a safari http://localhost:3000/ coverage/index.html erd.png

